<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/RelativeLayoutlistks"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:background="#99FFD6"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageViewlistks"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/hinhmot"/>



        <TextView
            android:id="@+id/text_viewlistks2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:text="Tên Khách Sạn"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="@color/Xam"/>

        <TextView
            android:id="@+id/text_viewlistks3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="45dp"
            android:text="Địa chỉ"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="@color/Xam"/>

        <Button
            android:id="@+id/buttonlistks1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xem chi tiết"
            android:layout_marginTop="92dp"
            android:layout_marginLeft="150dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>